<Page x:Class="app.Views.Pages.NewProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app.Views.Pages"
      xmlns:vm="clr-namespace:app.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewProduct">

    <Border>
        <StackPanel>
            <TextBlock Text="{DynamicResource add_product}"/>
            <TextBlock Text="{DynamicResource product_name}"/>
            <TextBlock Text="{DynamicResource product_desc}"/>
            <TextBlock Text="{DynamicResource product_category}"/>
            <TextBlock Text="{DynamicResource product_price}"/>
            <TextBlock Text="{DynamicResource product_picture}"/>
            
            <Button Content="{DynamicResource product_add}"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Page>
